<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Resume</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
        .container { width: 100%; max-width: 800px; margin: auto; padding: 20px; }
        .header { text-align: center; margin-bottom: 20px; }
        .section { margin-bottom: 20px; }
        .section h2 { border-bottom: 1px solid #ccc; padding-bottom: 5px; margin-bottom: 10px; }
        .experience, .education { margin-bottom: 10px; }
        .experience h3, .education h3 { margin: 0; }
        .experience p, .education p { margin: 5px 0; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><%= profile.name %></h1>
            <p><%= profile.headline %></p>
        </div>
        <div class="section">
            <h2>Summary</h2>
            <p><%= profile.summary %></p>
        </div>
        <div class="section">
            <h2>Experience</h2>
            <% profile.experience.forEach(function(exp) { %>
                <div class="experience">
                    <h3><%= exp.title %> at <%= exp.company %></h3>
                    <p><%= exp.dates %></p>
                    <p><%= exp.description %></p>
                </div>
            <% }); %>
        </div>
        <div class="section">
            <h2>Education</h2>
            <% profile.education.forEach(function(edu) { %>
                <div class="education">
                    <h3><%= edu.school %></h3>
                    <p><%= edu.degree %></p>
                    <p><%= edu.dates %></p>
                </div>
            <% }); %>
        </div>
        <div class="section">
            <h2>Skills</h2>
            <ul>
                <% profile.skills.forEach(function(skill) { %>
                    <li><%= skill %></li>
                <% }); %>
            </ul>
        </div>
    </div>
</body>
</html>
