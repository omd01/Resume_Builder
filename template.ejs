<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %> - Resume</title>
    <style>
      body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 10;
    background-color: #f4f4f4;
}

.resume-container {
    width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

header {
    text-align: center;
    margin-bottom: 20px;
}

header h1 {
    margin: 0;
    font-size: 2em;
    letter-spacing: 1px;
}

.title {
    color: #555;
    font-size: 1em;
    margin-bottom: 10px;
}

.contact-info {
    font-size: 0.9em;
    color: #666;
}

.contact-info span {
    display: inline-block;
    margin-right: 15px;
}

.contact-info a {
    color: #0073b1;
    text-decoration: none;
}

h2 {
    color: #333;
    border-bottom: 2px solid #ddd;
    padding-bottom: 5px;
}

.skills-container {
    display: flex;
    justify-content: space-between;
}

.skills-container div {
    width: 30%;
}

.skills-container ul {
    padding: 0;
}

.skills-container li {
    background-color: #f9f9f9;
    
    padding: 2px;
}

section {
    margin-bottom: 20px;
}

h3 {
    margin: 10px 0 5px;
    font-size: 1.1em;
    color: #444;
}

a {
    color: #0073b1;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

    </style>
</head>
<body>
    <div class="resume-container">
        <header>
            <h1><%= name %></h1>
            <p class="title"><%= title %></p>
            <div class="contact-info">
                <span>üìû <%= phone %></span>
                <span>‚úâÔ∏è <%= email %></span>
                <span><a href="<%= github %>">GitHub</a></span>
                <span>üìç <%= location %></span>
                <span><a href="<%= linkedin %>">LinkedIn</a></span>
                <span><a href="<%= leetcode %>">Leetcode</a></span>
            </div>
        </header>
        <section class="summary">
            <h2>Summary</h2>
            <p><%= summary %></p>
        </section>
       
        <section class="skills">
            <h3>Skills</h3>
            <div class="skills-container">
                <div>
                    <h4>Soft Skills</h4>
                    <ul>
                        <% skills.soft.forEach(function(skill) { %>
                            <li><%= skill %></li>
                        <% }); %>
                    </ul>
                </div>
                <div>
                    <h4>Hard Skills</h4>
                    <ul>
                        <% skills.hard.forEach(function(skill) { %>
                            <li><%= skill %></li>
                        <% }); %>
                    </ul>
                </div>
                <div>
                    <h4>Technology</h4>
                    <ul>
                        <% skills.technology.forEach(function(skill) { %>
                            <li><%= skill %></li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </section>

       
        <section class="internships">
            <h3>Internships</h3>
            <% internships.forEach(function(internship) { %>
                <% if (internship.name !=null) { %>
                <h3><%= internship.name %></h3>
                <p><strong><%= internship.position %> ‚Ä¢ <%= internship.duration %></strong></p>
                <p><%= internship.description %></p>
                <% } %>
            <% }); %>
        </section>
   

       
        <section class="experience">
            <h3>Experience</h3>
            <% experience.forEach(function(exp) { %>
                <% if (exp.position !=null) { %>
                <h3><%= exp.position %></h3>
                <p><strong><%= exp.company %> ‚Ä¢ <%= exp.duration %></strong> <a href="<%= exp.badgeLink %>">Badge Link</a></p>
                <p><%= exp.description %></p>
                <% } %>
            <% }); %>
        </section>
       


       
        <section class="projects">
            <h3>Projects</h3>
            <% projects.forEach(function(project) { %>
                <% if (projects.name !=null) { %>
                <h3><%= project.name %></h3>
                <p><strong><%= project.technology %></strong></p>
                <p><%= project.description %></p>
              
            <% }}); %>
        </section>
       


       
            <section class="education">
                <h3>Education</h3>
                <% if (education.degree !=null) { %>
                <p><strong><%= education.degree %></strong></p>
                <p><%= education.institution %> ‚Ä¢ <%= education.duration %></p>
                <% } %>
            </section>
           
    </div>
</body>
</html>
